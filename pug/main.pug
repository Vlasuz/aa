block content

	section.banner
		.banner__slider
			.slider__dots
			.slider__item.wow(data-wow-duration=".3s")
				.item__photo
					img(src="img/main-page/banner1.jpg" alt="Photo")
				.item__text.wow.fadeIn
					h2.h1 Audacis Advisors Capital Raising Made Easier
			//- .slider__item.wow(data-wow-duration=".3s")
				.item__photo
